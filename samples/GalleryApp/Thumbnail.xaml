<UserControl
    x:Class="GalleryApp.Thumbnail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GalleryApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="400">


    <Grid Background="LightGray" Height="400" Width="400">
        <Grid Height="200"  Width="400" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Rectangle Height="200" Width="400" VerticalAlignment="Bottom"
                                                       Fill="Gray" Opacity="0.25"/>
            <TextBlock Text="{x:Bind SkillName}" Padding="10, 0, 10, 0"
                       Style="{StaticResource SubheaderTextBlockStyle}"/>
            <TextBlock Text="{x:Bind SkillDescription}" Padding="10, 60, 10, 0"
                       Style="{StaticResource BodyTextBlockStyle}"/>
        </Grid>
        <Button Height="400" Width="400" Opacity="0" Click="NavigateToSkillPage"/>
    </Grid>

</UserControl>
